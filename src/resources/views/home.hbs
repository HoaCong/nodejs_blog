<div class="mt-4">
  <div class="row">
    <div class="col-sm-6 col-lg-4">
      {{#each courses}}
        <div class="card card-course-item">
          <img class="card-img-top" src={{this.image}} alt="Card image cap" />
          <div class="card-body">
            <d5 class="card-title">
              {{this.name}}
            </d5>
            <p class="card-text">{{this.description}}</p>
            <a class="btn btn-primary" href="#">Mua khóa học</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>